<!-- partial czyli kod który się powtarza -->
<!-- Sprawdzamy czy są błędy --->
<% if @host.errors.present? %>
  <div class="alert alert-danger">
    <p>Wystąpiły następujące błędy:</p>
    <ol>
      <% @host.errors.full_messages.each do |message| %>
        <li><%= message.titleize %></li>
      <% end %>
    </ol>
  </div>
<% end %>

<%= form_for @host do |f| %>
<div class="form-group">
  <%= f.label :hostname, "Hostname" %>
  <%= f.text_field :hostname, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :address, "Adres" %>
  <%= f.text_field :address, class: "form-control" %>
</div>
<%= f.submit button_name, class: "btn btn-primary" %>
<% end %>
