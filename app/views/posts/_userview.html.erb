<h3> Lista wpisów </h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Tytuł</th>
      <th>Autor</th>
      <th>Treść</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title.html_safe %></td>
        <td><%= post.author %></td>
        <td><%= post.body %></td>
        <td>
          <%= link_to "Pokaż", post_path(post), class: "btn btn-success btn-xs" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
