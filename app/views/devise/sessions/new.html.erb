<body class="text-center">
<div class="row">
  <div class="col-sm"></div>
  <div class="col-sm">

<h2>Zaloguj się</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<%= render "layouts/flash", resource: resource %>
 
 <%= f.error_notification %>

  <div class="form">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                :label => 'Hasło',
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, :label => 'Zapamiętaj mnie', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zaloguj", :class => "btn btn-success btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
  <div class="col-sm"></div>
</div>
